<!-- SECTION INFO FOURNISSEUR -->
<section class="row">

	{% if not editMode %}
		<h2 class="no-margin-bottom">Informations</h2>
	{% else %}
		<h2 class="no-margin-bottom">Modification des données</h2>
	{% endif %}
  	<!-- Input name element -->
  	<div class="input-field col s12">
  		<i class="material-icons prefix">account_circle</i>	
  		{{ form_widget(form.name, {'id': 'input-name', 
  							      'attr': {'class': 'validate required','placeholder':'Nom'}}) }}
	</div>

		
	
	<!-- input description element -->
	<div class="input-field col s12">
		<i class="material-icons prefix">description</i>
	  	{{ form_widget(form.description, {'id': 'input-description',
  								          'attr': {'class': 'validate',
  											   'placeholder':"Description de l'acteur, pas des produits !",
  											   'length':'80'   }}) }}
	</div>

	<!-- Input adresse element -->
	<div class="input-field col s12">
	<i class="material-icons prefix">room</i>	
  	{{ form_widget(form.adresse, {'id': 'input-address',
  								  'attr': {'class': 'validate required',
  								           'placeholder':'Adresse Complète' 
  								  		   }}) }}
	
	</div>	

	<div id="other-selling-point">D'autres points de ventes (marchés, AMAP...) ? Ajouter les à notre base de donnée 
  		avec un nouveau formulaire !</div>

	<!-- HIDDEN input pour stocker valeur de la lat et lng -->
	{{ form_widget(form.latlng.latitude, {'id': 'input-latitude'}) }}	
	{{ form_widget(form.latlng.longitude, {'id': 'input-longitude'}) }}				

	<!-- Map -->
	<div id="address-preview-map" class="col s12"></div>	

</section>
<div class="divider"></div>

 <section id="optional-info-section">
 	<h2 class="no-margin-bottom">Contact (optionnnel)</h2>

	<!-- input telephone element -->
	<div class="input-field col s12">
		<i class="material-icons prefix">phone</i>
	  	{{ form_widget(form.tel, {'id': 'input-tel',
  							      'attr': {'class': 'validate',
  											   'placeholder':'Téléphone ',
  											   'pattern':'-?[0-9]*(\.[0-9]+)?'   }}) }}
	</div>

	<!-- input element email -->
	<div class="input-field col s12">
		<i class="material-icons prefix">mail</i>	
		{{ form_widget(form.mail, {'id': 'input-mail',
  								      		   'attr': {'class': 'validate',
  											   			'placeholder':'Mail' }}) }}
	</div>

	<!-- input webSite element -->
	<div class="input-field col s12">
		<i class="material-icons prefix">public</i>
	  	{{ form_widget(form.webSite, {'id': 'input-website',
  							      'attr': { 'class': 'validate',
  							      			'type':'url',
  											'placeholder':'Site internet'  }}) }}
	</div>	

	

 </section>
 <div class="divider"></div>

 <section id="amap-section" style="display:none">
 	<h2 id="title-amap">Contact dans l'AMAP (renseignez un téléphone et/ou un e-mail)</h2>
		<div class="row ">
	 	<!-- input-name du contact de l'AMAP -->
		<div class="input-field col s12" id="amap-contact">
		  	<i class="material-icons prefix">account_circle</i>	
		  	{{ form_widget(form.contactAmap.children.name, 
				  				{ 'id' : 'input-nameContactAMAP',									
			  					  'attr': {'placeholder':'Nom du Contact de l\'AMAP',
			  							   'name' : 'nameAMAP',
			  					}}) }}
		</div>
		<!-- input telephone contact de l'AMAP -->
		<div class="input-field col s12">
			<i class="material-icons prefix">phone</i>
		  	{{ form_widget(form.contactAmap.children.tel, 
				  				{ 'id' : 'input-tel-amap',									
			  					  'attr': {'placeholder':'Téléphone du contact',
			  							   'name' : 'telAMAP',
			  							   'pattern': '-?[0-9]*(\.[0-9]+)?'
			  					}}) }}
		</div>			
		<!-- input Mail du contact de l'AMAP -->
	  	<div class="input-field col s12"  id="AMAP_mail">
			<i class="material-icons prefix">mail</i>	
			{{ form_widget(form.contactAmap.children.mail, 
				  				{ 'id' : 'inputMailAMAP',									
			  					  'attr': {'type' : 'email',
			  					  		   'placeholder':'Adresse mail du contact',
			  							   'name' : 'mailAMAP'
			  					}}) }}
		</div>
	</div>
</section>
<div class="divider" style="display:none"></div>