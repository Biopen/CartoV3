{% extends "@BiopenCoreBundle/base-layout.html.twig" %}

{% block stylesheets %}	
  
  <link rel="stylesheet" href="{{ asset('assets/css/pages.css') }}"> 

  {% block page_stylesheets %}
  {% endblock %}

{% endblock %}

{% block body %}

	<div>{{ render(controller('BiopenCoreBundle:Core:header', {'iframe': app.request.get('iframe') } ))}}</div>

	<div id="page-container">	   
		
		<div id="page-content" {% if pageName is defined %}class="{{ pageName }}"{% endif %}>

			{# FLASH MESSAGES #}
			<div class="flash-messages-container">
				{% for type, messages in app.session.flashBag.all %}
		      {% for message in messages %}
		          <div class="flash-message {{ type }}">
		              {{ message|trans({}, 'SonataUserBundle')|raw }}
		              <span class="btn-close icon-clear"></span>
		          </div>
		      {% endfor %}
	   		{% endfor %}
   		</div>
			
			{% block body_content %}
			{% endblock %}
			
		</div>
	</div>	

{% endblock %}

{% block javascripts %}
		
    {% block page_javascripts %}
    {% endblock %}  
    
{% endblock %}

