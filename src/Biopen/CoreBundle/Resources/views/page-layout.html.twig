{% extends "@BiopenCoreBundle/base-layout.html.twig" %}

{% block stylesheets %}

	{% block page_stylesheets %}
  {% endblock %}
  <link rel="stylesheet" href="{{ asset('assets/css/pages.css') }}"> 
  

{% endblock %}

{% block body %}

	<div id="page-container">		

    <div>{{ render(controller('BiopenCoreBundle:Core:header'))}}</div>
		
		<div id="page-content">

			{# FLASH MESSAGES #}
			{% if app.session.flashBag.all|length %}
				{% for type, messages in app.session.flashBag.all %}
		      {% for message in messages %}
		          <div class="flash-message {{ type }}">
		              {{ message|trans({}, 'SonataUserBundle') }}
		          </div>
		          <div class="divider"></div>
		      {% endfor %}
	   		{% endfor %}
   		{% endif %}

   		<div class="flash-messages-container">
        <div class="flash-message">
            Un nouvel utilisateur a bien été créé
        </div>
        <div class="divider"></div>

        <div class="flash-message ">
            vous êtes maintenant connecté
        </div>
        <div class="divider"></div>
	   	</div>
			
			{% block body_content %}
			{% endblock %}
			
		</div>
	</div>	

{% endblock %}

