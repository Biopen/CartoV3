{% extends "@BiopenCoreBundle/base-layout.html.twig" %}

{% block stylesheets %}	
  
  <link rel="stylesheet" href="{{ asset('assets/css/pages.css?ver=' ~ version) }}"> 

  {% block page_stylesheets %}
  {% endblock %}

{% endblock %}

{% block body %}
	
	<div>{{ render(controller('BiopenCoreBundle:Core:header', {'title': navTitle, 'iframe': app.request.get('iframe') } ))}}</div>

	<div id="page-container" {% if pageName is defined %}class="{{ pageName }}"{% endif %}>	   
		
		<div id="page-content" {% if pageName is defined %}class="{{ pageName }}"{% endif %}>

			{# FLASH MESSAGES #}		
			{% for type, messages in app.session.flashBag.all %}					
				{% if messages | length > 0 %}	
				<div class="flash-messages-container">	
		      {% for message in messages %}
		          <div class="flash-message {{ type }}">
		              {{ message|trans({}, 'SonataUserBundle')|raw }}
		              <span class="btn-close gogo-icon-clear"></span>
		          </div>
		      {% endfor %}
		    </div>
	      {% endif %}
 			{% endfor %}   	
			
			{% block body_content %}
			{% endblock %}
			
		</div>
	</div>	

{% endblock %}

{% block javascripts %}
		
    {% block page_javascripts %}
    {% endblock %}  

{% endblock %}

