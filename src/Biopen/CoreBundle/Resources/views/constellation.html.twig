{% extends "::bundle_layout.html.twig" %}

{% block title %}Constellation{% endblock %}

{# Stylessheets #}
{% block stylesheets %}

  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="{{ asset('assets/css/constellation.css') }}">

{% endblock %}


{# BODY CONTENT #}
{% block body_content %}
  
  <section id="section_carte">
  <div id="map"> </div>
  <div id="bandeau_detail"></div>
  <div id="bandeau_option"></div>

  <div id="div_recherche_contener" class="valign-wrapper" style="display:none">
    


    <div class="valign" style="width:100%"> 
    
    <div id="div_recherche">
    {% for flash_message in app.session.flashbag.get('error') %}
      <p class="flash-error">
          {{ flash_message | raw }}
      </p>
    {% endfor %}
    <div class="input-field"> 
      <input class="validate" placeholder="Entrez votre adresse ici" type="text" id="inputAdresse" name="adresse"/>
    </div>
    </div>
  </div>
  </div> 


  <div id="btn_menu"><i class='material-icons'>menu</i></div> 
  <div id="overlay"></div>
</section>

<div id="bandeau_plus_resultats">
  {# {% for fournisseur in listFournisseur %}
      <p>{{ fournisseur.nom }}</p>
  {% endfor %}  #}
</div>

{% endblock %}



{% block javascripts %}

  <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    
  {% javascripts filter="?jsqueeze"
        "assets/js/libs/jquery-2.2.1.min.js"
        "assets/js/libs/materialize/bin/materialize.js"
        "assets/js/constellation.js"
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBgah9u8A21CdN6O_fN80Op-4zcLJ0EwXk&libraries=places&callback=initMap">
  </script>

  <script>
    var listFournisseur = null;
    {% if listFournisseur != null %}
    listFournisseur = {{ listFournisseur | serialize("json") | raw }};
    var lat = {{ lat | raw }};
    var lng = {{ lng | raw }};
    {% endif %}
  </script>

{% endblock %}

