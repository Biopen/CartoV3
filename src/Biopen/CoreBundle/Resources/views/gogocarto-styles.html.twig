<style>
  {# --------------------#}
  {#     GENERAL         #}
  {# ------------------- #}

  {% set text = config.getTextContentColor %}
  {% set textSoft = config.getTextSoftContentColor %}
  {% set primary = config.primaryColor %}
  {% set secondary = config.secondaryColor %}
  {% set background = config.backgroundColor %}
  {% set header = config.headerColor %}
  {% set headerText = config.headerTextColor %}
  {% set headerTextHover = config.headerHoverColor %}
  {% set contentBgd = config.contentBackgroundColor %}
  {% set contentBgdSoft = config.contentBackgroundSoftColor %}  
  {% set disable = config.disableColor %}
  {% set error = config.errorColor %}

  {% import _self as self %}
  {{ self.createcolor('primary', primary) }}
  {{ self.createcolor('secondary', secondary) }}  
  {{ self.createcolor('background', background) }}
  
  html{
    line-height: 1.5;
    font-size: 14px;

    font-family: sans-serif; /* 1 */
    -ms-text-size-adjust: 100%; /* 2 */
    -webkit-text-size-adjust: 100%; /* 2 */

    box-sizing: border-box;
  }
  @media screen and (min-width: 900px) { html {font-size: 14.5px;} }
  @media screen and (min-width: 1200px) { html {font-size: 15px;} }

  *, *:before, *:after {
   box-sizing: inherit;
  }

  body, html { background-color: {{ background }}; color: {{ text }}; font-family: {{ config.mainFont }}; }

  .gogo-load-css h1, .gogo-load-css h2 { font-family: {{ config.titleFont }}; }

  #page-content.with-section section { background-color: {{ contentBgd }}; }

  .gogo-load-css .btn { background-color: {{ primary }}; color: {{ contentBgd }} }
  .gogo-load-css .btn:hover { background-color: {{ primary }}; }
  .gogo-load-css .btn:focus { background-color: {{ primary }}; }

  .gogo-load-css .btn.btn-secondary { background-color: {{ secondary }}; }
  .gogo-load-css .btn.btn-secondary:hover { background-color: {{ secondary }}; }

  .gogo-load-css .btn.btn-neutral { background-color: {{ textSoft }}; }
  .gogo-load-css .btn.btn-neutral:hover { background-color: {{ textSoft }}; }

  .gogo-load-css a { color: {{ primary }}; }
  .gogo-load-css .modal.page-modal { background-color: {{ text }} !important; }  
  
  .gogo-load-css .neutral-color { color: {{ textSoft }}; }  

  .gogo-load-css #page-content { background-color : {{ contentBgd }}; }

  .gogo-load-css .flash-message a:hover { color: {{ primary }}; }
  .gogo-load-css #page-content.directory .flash-messages-container .flash-message { background-color: {{ secondary }}; }

  .gogo-load-css .wysiwyg-content a { color: {{ secondary }}; }
  .gogo-load-css .wysiwyg-content.background-dark  a { color: {{ primary }}; }

  .gogo-load-css #page-content.contributor-login .login-section .oauth-section .oauth-btn.instance-login { color: {{ primary }}; }

  .gogo-load-css #section-credits { background-color: {{ header }}; color: {{ headerText }}; }  
  .gogo-load-css #section-credits strong { color: {{ headerText }}; }  
  {% if header == "white" or header == "#ffffff" %}.gogo-load-css #section-credits { border-top: 1px solid #eaeaea; }{% endif %}


  {# --------------------#}
  {#      HEADER         #}
  {# ------------------- #}

  .gogo-load-css #menu { background-color: {{ header }}; color: {{ headerText }}; }
  .gogo-load-css #menu .dropdown-content { background-color: {{ header }}; }
  .gogo-load-css #menu .menu-item:hover { color: {{ headerTextHover }}; background-color: transparent; }
  .gogo-load-css #menu .menu-item .arrow-after { border-color: {{ headerText }} transparent transparent transparent; }
  .gogo-load-css #menu .menu-item:hover .arrow-after { border-color: {{ headerTextHover }} transparent transparent transparent; }
  .gogo-load-css #menu ul.dropdown-content li:hover a { color: {{ headerTextHover }} !important; }
  .gogo-load-css #menu-home .small-logo .header-icon { background-color: {{ headerTextHover }}; } 
  .gogo-load-css #menu-home { font-family: {{ config.titleFont }}; }
  {% if header == "white" or header == "#ffffff" %}.gogo-load-css #menu { border-bottom: 1px solid #eaeaea; }{% endif %}
  .gogo-load-css header #menu .dropdown-content .item-divider { background-color: {{ headerText }}; opacity: .2; }

  {# --------------------#}
  {#      MODALS         #}
  {# ------------------- #}
  .gogo-load-css .modal.page-modal { background-color: transparent !important; }
  .gogo-load-css .modal.page-modal .modal-content.page-modal-content {
    background-color: {{ config.getModalBackgroundColor }};
    color: {{ config.getTextLightColor }};
  }
  .gogo-load-css .modal.page-modal .btn {
    color: {{ config.getModalBackgroundColor }};
  }
  

  {# --------------------#}
  {#      DIRECTORY      #}
  {# ------------------- #}

  .gogo-load-css #gogo-controls-mobile.map { padding-right: 15px; }


  {# --------------------#}
  {#     ELEMENT FORM    #}
  {# ------------------- #}
  
  {# Main #}
  #element-form-title { background-color: {{ contentBgd }}; }  
  .gogo-load-css #page-content.element-form section { background-color: {{ contentBgd }}; }  

  {# Taxonomy field #}
  .gogo-load-css .option-field .option-field-delete i:hover { color: {{ primary }} !important; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper .select-dropdown { color: {{ contentBgd }}; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper { background-color: {{ primary }}; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper.depth-1 { background-color: {{ secondary }}; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper.depth-2 { background-color: {{ textSoft }}; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper.depth-3 { background-color: {{ textSoft }}; }
  .gogo-load-css #element-form-content .category-field-select .select-wrapper.depth-4 { background-color: {{ textSoft }}; }

  .gogo-load-css .option-field-name .icon.depth-0 { color: {{ primary }}; }
  .gogo-load-css .option-field-name .icon.depth-1 { color: {{ secondary }}; }
  .gogo-load-css .option-field-name .icon.depth-2 { color: {{ textSoft }}; }
  .gogo-load-css .option-field-name .icon.depth-3 { color: {{ textSoft }}; }
  .gogo-load-css .option-field-name .icon.depth-4 { color: {{ textSoft }}; }

  .category-field.error:before { color: {{ error }}; }
  .category-field.error .select-wrapper { background-color: {{ error }} !important; }
  .gogo-load-css #element-form-content .option-field.inline { background-color:  {{ textSoft }}; }

  .gogo-load-css .dropdown-content { background-color: {{ contentBgd }}; }
  .gogo-load-css .dropdown-content { background-color: {{ contentBgdSoft }}; }
  .gogo-load-css .dropdown-content li>span { color: {{ textSoft }}; }

  .gogo-load-css .main-options-container label.main-option-radio-label:after
  {
    border: 2px solid {{ primary }};
    background-color: {{ primary }};
  }
  .gogo-load-css .main-options-container label.main-option-radio-label:before 
  {
    border: 2px solid {{ textSoft }};
  }  

  {# Input #}  
  .gogo-load-css input:focus:not(.invalid):not([readonly]):not([type=submit]), .gogo-load-css textarea:focus:not(.invalid):not([readonly]) {
    border-color: {{ textSoft }} !important;
    box-shadow: 0 1px 0 0 {{ textSoft }} !important;
  }
  .gogo-load-css input.invalid:not([readonly]):not([type=submit]), .gogo-load-css textarea.invalid:not([readonly]) {
    border-color: {{ error }} !important;
    box-shadow: 0 1px 0 0 {{ error }} !important;
  }
  .gogo-load-css input:not(:focus):not(.invalid):not([type=submit]), .gogo-load-css textarea:not(:focus):not(.invalid) {
    border-bottom: 1px solid {{ disable }} !important;
    box-shadow: none !important;
  }

  {# Input Label #}  
  .gogo-load-css label { color: {{ textSoft }}; } 
  .gogo-load-css label.gogo-form-label { color: {{ disable }} !important }
  .gogo-load-css input:focus:not(.invalid) + label.gogo-form-label, .gogo-load-css textarea:focus:not(.invalid) + label.gogo-form-label { color: {{ text }} !important; }
  .gogo-load-css input.invalid + label.gogo-form-label, .gogo-load-css textarea.invalid + label.gogo-form-label { color: {{ error }} !important; }
  .gogo-load-css input[type=date].invalid+label:after, .gogo-load-css input[type=date]:focus.invalid+label:after, .gogo-load-css input[type=datetime-local].invalid+label:after, .gogo-load-css input[type=datetime-local]:focus.invalid+label:after, .gogo-load-css input[type=email].invalid+label:after, .gogo-load-css input[type=email]:focus.invalid+label:after, .gogo-load-css input[type=number].invalid+label:after, .gogo-load-css input[type=number]:focus.invalid+label:after, .gogo-load-css input[type=password].invalid+label:after, .gogo-load-css input[type=password]:focus.invalid+label:after, .gogo-load-css input[type=search].invalid+label:after, .gogo-load-css input[type=search]:focus.invalid+label:after, .gogo-load-css input[type=tel].invalid+label:after, .gogo-load-css input[type=tel]:focus.invalid+label:after, .gogo-load-css input[type=text].invalid+label:after, .gogo-load-css input[type=text]:focus.invalid+label:after, .gogo-load-css input[type=time].invalid+label:after, .gogo-load-css input[type=time]:focus.invalid+label:after, .gogo-load-css input[type=url].invalid+label:after, .gogo-load-css input[type=url]:focus.invalid+label:after, .gogo-load-css textarea.materialize-textarea.invalid+label:after, .gogo-load-css textarea.materialize-textarea:focus.invalid+label:after {
    color: {{ error }} !important;
  }

  .gogo-load-css label.gogo-form-label.active {
    color: {{ textSoft }} !important;
  }  

  {# Input Icon #}  
  .gogo-load-css .input-field i.prefix { color: {{ disable }}; }
  .gogo-load-css .input-field i.prefix.active { color: {{ textSoft }}; }
  .gogo-load-css .input-field i.prefix.valid { color: {{ textSoft }}; }
  .gogo-load-css .input-field i.prefix.invalid { color: {{ error }}; }

  {# Checkbox #}
  .gogo-load-css [type=checkbox]+label:before { border-color: {{ disable }}; }
  .gogo-load-css [type=checkbox]:checked+label:before {
    border-right-color: {{ primary }};
    border-bottom-color: {{ primary }};
  }

  .gogo-load-css [type=radio]:checked+label:after {
    border: 2px solid {{ primary }};
    background-color: {{ primary }};
  }

  {# Address #}
  .gogo-load-css .geolocalize-help-text {
    background-color: {{ contentBgdSoft }};
    color: {{ text }};
  }
  .gogo-load-css .geolocalize-help-text .btn-close {
    color: {{ text }};
  }

  {# Open Hours #}
  .gogo-load-css .gogo-icon-icon-copy-hours, .gogo-load-css .gogo-icon-add-circle, .gogo-load-css .gogo-icon-clear { color: {{ textSoft }}; }
  .gogo-icon-icon-copy-hours:hover, .gogo-icon-add-circle:hover, .gogo-load-css .gogo-icon-clear:hover { color: {{ primary }}; }
  .gogo-load-css .timepicker_wrap {
    background-color: {{ contentBgd }};
    color: {{ text }};
  }
  .gogo-load-css .timepicker_wrap .time, .gogo-load-css .timepicker_wrap .mins, .gogo-load-css .timepicker_wrap .meridian { color: {{ text }}; }
  .gogo-load-css .timepicker_wrap .prev, .gogo-load-css .timepicker_wrap .next {
    background-color: {{ textSoft }};
    color: {{ contentBgd }};
    border: none;
  }
  .gogo-load-css .open-hours-container.impair { background-color: {{ contentBgdSoft }}; }

  {# Error #}
  .mandatory-asterisk:after, label .error, .input-field.error .prefix, 
  .gogo-load-css #input-address-field.error:after, #input-address-field.error #input-address:after, h1.error, h2.error, label.error 
   { color: {{ error }} !important; }
  .input-field.error.select-input.invalid-required input {
    border-bottom: 1px solid {{ error }} !important;
    box-shadow: 0 1px 0 0 {{ error }} !important;
  }
  .input-field.error textarea:not(:focus) { border-color: {{ error }}; }
  #page-content.contributor-login .input-field.error .prefix { color: {{ error }}; }
  


  {# ----------- #}
  {#     HOME    #}
  {# ----------- #}
  
  .gogo-load-css section.bottom-section { padding: 0; }
  .gogo-load-css #search-geolocalize { color: {{ textSoft }}; }
  .gogo-load-css section#home-main-container { background-color: {{ contentBgd }}; }
  .gogo-load-css section#home-main-container h1 { color: {{ primary }}; }
  .gogo-load-css .search-bar-with-options-container .search-bar-container.search-bar { border: none !important; }
  #bottom-more-info { background-color: {{ header }}; color: {{ headerText }} }
  #bottom-more-info:hover { color: {{ headerTextHover }} }
  .wrappers-container { color: {{ text }}; background-color: {{ contentBgd }}; }

  {# ----------- #}
  {#     USER    #}
  {# ----------- #}

  .gogo-load-css .menu-user ul li { background-color: {{ contentBgd }}; }
  .gogo-load-css .menu-user ul li.title { background-color: {{ textSoft }}; color: {{ contentBgd }}; }
  .gogo-load-css .menu-user ul li:hover:not(.title) { background-color: {{ contentBgdSoft }}; }
  .gogo-load-css .menu-user ul a:not(:last-child) li {
    border-bottom: 1px solid {{ contentBgdSoft }};
  }
  .gogo-load-css #page-content.user-contributions thead { 
    background-color: {{ contentBgdSoft }}; 
    border-top: 1px solid #d0d0d0;
  }

  

  #page-content.contributor-login .email-already-in-use { color: {{ error }}; }  
  form.biopen_user_profile .error ul li, form.fos_user_registration_register .error ul li { color: {{ error }}; }
  
</style>

{% macro createcolor(name, value) %}
  .gogo-{{ name }} { color: {{ value }}; }
  .gogo-h-{{ name }}:hover { color: {{ value }} !important; }
  .gogo-h-{{ name }}.hover { color: {{ value }} !important; }
  .gogo-bg-{{ name }} { background-color: {{ value }} !important; }
  .gogo-h-bg-{{ name }}:hover { background-color: {{ value }} !important; }
  .gogo-border-{{ name }} { border-color: {{ value }}; }
  .gogo-h-border-{{ name }}:hover { border-color: {{ value }} !important; }
{% endmacro %}

