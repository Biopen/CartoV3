{% extends "@BiopenCoreBundle/page-layout.html.twig" %}

{% set pageName = 'partners' %}

{% block title %}Partenaires{% endblock %}

{# BODY CONTENT #}
{% block body_content %}

<section>

<h1>Nos amis et partenaires</h1>    

{% for partner in listPartners %}

  <div class="partner-item row">
    <div class="image-container">
      <img src={{ asset('assets/img/partners/' ~ partner.logoUrl) }} alt="logo" class="partner-logo"/>
    </div>
    <div class="partner-text">
      <h2 class="partner-title">{{ partner.name|capitalize }}</h2>
      <p class="partner-description">{{ partner.content |raw }} </p>
      <a class="partner-url" href="{{ partner.websiteUrl }}" target="_blank">{{ partner.websiteUrl }}</a>
    </div>
  </div>

{% endfor %}

</section>
   
{% endblock %}