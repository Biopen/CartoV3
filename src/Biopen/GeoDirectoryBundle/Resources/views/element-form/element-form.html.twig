{% extends "@BiopenCoreBundle/page-layout.html.twig" %}

{% set pageName = 'element-form' %}

{% block page_stylesheets %}
  
  <link rel="stylesheet" href="{{ asset('assets/css/element-form.css') }}"> 

{% endblock %}

{% block title %}
	{% if editMode %} Edition
	{% else %}  Ajouter {{ config.elementDisplayNameIndefinite }}
	{% endif %}
{% endblock %}


{# BODY CONTENT #}
{% block body_content %}	
  
  <h1 id="element-form-title">{{ editMode ? 'Modification des donn√©es' : "Ajouter " ~ config.elementDisplayNameIndefinite }}</h1> 

  {% include "@BiopenGeoDirectory/element-form/form.html.twig" with {'editMode': editMode } %}

{% endblock %}

{% block page_javascripts %}

  <script src="{{ asset('js/element-form.js') }}"></script> 

  {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
	 	<script src="https://www.google.com/recaptcha/api.js?onload=onloadCaptcha&render=explicit"
	        async defer>
	  </script>
	{% endif %}

  <script>
	  var editMode = false;		  
	  {% if editMode %} editMode = true; {% endif %}
	  initMap();
  </script>
  
{% endblock %}





