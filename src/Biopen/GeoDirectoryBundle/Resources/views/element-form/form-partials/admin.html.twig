<section class="row" id="section_admin">
	<h2 id="admin-title">Admin</h2>
	
	<div class="col s12">
		<input type="checkbox" name="dont-send-mail" id="dont-send-mail"/>
		<label for="dont-send-mail">Ne pas pr√©venir l'acteur des modifications</label> 	
	</div>

	{# if element is pending #}
	{% if element.status is defined and element.status == 0 %}
	<div class="col s12">
		<input type="checkbox" name="dont-validate" id="dont-validate"/>
		<label for="dont-validate">Ne pas valider l'acteur, je modifie simplement la mise en forme</label> 	
	</div>
	{% endif %}

	{% if not editMode %}
	<div class="col s12">
		<input type="checkbox" name="recopyInfo" id="recopy-info"/>
		<label for="recopy-info">Recopier les informations dans un nouveau formulaire</label> 	
	</div>
	{% endif %}

</section>