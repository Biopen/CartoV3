<div class="filter-menu">	

	<div class="main-categories">

		<div class="icon icon-plantes" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-bike active" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-bed" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-home" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-paw" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-education" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 
		<div class="icon icon-coffee" data-position="right" data-delay="0" data-tooltip="Agriculture"></div> 

	</div>

	<div class="sub-categories">

		<div class="sub-categorie-main-title">Agriculture</div>

		<div class="sub-categories-content">
		<ul>

			<li class="subcategorie-option-item row" id="filter-favorite">
					    <span class="icon icon-star-full"></span>
					    <span class="option-name">Favoris</span> 
					    <span class="checkbox-wrapper">
					      <input type="checkbox" class="subcategorie-option-checkbox favorite-checkbox" id="product-checkbox-favorite" data-type='favorite' data="favorite" />
					      <label for="product-checkbox-favorite" data-position="right" data-delay="0" data-tooltip="Afficher uniquement les favoris"></label>
					    </span>
			</li>

			<li class="subcategory-item first">
				Catégories
				<span class="checkbox-wrapper">
			      <input type="checkbox" class="subcategorie-checkbox filled-in" id="subcategorie-checkbox-type" checked="checked" data-type='type'/>
			      <label for="subcategorie-checkbox-type"></label>
				</span>
			</li>

			{% set types = {'producteur':'Producteur','amap':'AMAP','marche':'Marché','boutique':'Boutique','epicerie':'Epicerie'} %}

			{% for type_formate, type in types %}
				<li class="subcategorie-option-item row">
				    <span class="icon icon-marker {{ type_formate }}"></span>
				    <span class="option-name">{{ type|capitalize }}</span> 
				    <span class="icon btn-show-only icon-material-eye"></span>
				    <span class="checkbox-wrapper">
				      <input type="checkbox" class="type-checkbox subcategorie-option-checkbox" id="type-checkbox-{{ type_formate }}" checked="checked" data-type='type' data="{{ type_formate }}"/>
				      <label for="type-checkbox-{{ type_formate }}"></label>
				    </span>
				</li>
			{% endfor %}

			<li class="subcategory-item">
				Produits
				<span class="checkbox-wrapper">
			      <input type="checkbox" class=" subcategorie-checkbox filled-in" id="subcategorie-checkbox-products" checked="checked" data-type='product'/>
			      <label for="subcategorie-checkbox-products"></label>
				</span>
			</li>

			{% for key, product in listProducts %} 
			   
			    <li class="subcategorie-option-item  row"  >
				    <span class="icon icon-{{ product.nameFormate }}"></span>
				    <span class="option-name">{{ product.nameShort|capitalize }}</span> 
				    <span class="checkbox-wrapper">
				      <input type="checkbox" class=" product-checkbox subcategorie-option-checkbox" id="product-checkbox-{{ product.nameFormate }}" checked="checked" data-type='product' data="{{ product.nameFormate }}"/>
				      <label for="product-checkbox-{{ product.nameFormate }}"></label>
				    </span>
			    </li>

			{% endfor %} 

			<li class="subcategory-item">
				Horaires d'ouverture
				<span class="checkbox-wrapper">
			      <input type="checkbox" class=" subcategorie-checkbox filled-in" id="subcategorie-checkbox-day" checked="checked" data-type='day'/>
			      <label for="subcategorie-checkbox-day"></label>
				</span>
			</li>

			{% set days = ['lundi','mardi','mercredi','jeudi','vendredi','samedi','dimanche'] %}

			{% for day in days %}
				<li class="subcategorie-option-item row">
				    <span class="icon icon-day"></span>
				    <span class="dayName">{{ day|capitalize }}</span> 
				    <span class="checkbox-wrapper">
				      <input type="checkbox" class="day-checkbox subcategorie-option-checkbox" id="days-checkbox-{{ day }}" checked="checked" data-type='day' data="{{ day }}"/>
				      <label for="days-checkbox-{{ day }}"></label>
				    </span>
				</li>
			{% endfor %}

		</ul>
		</div>

	</div>

</div>