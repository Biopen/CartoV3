{% if optionList is defined %}
<style>
  {% for option in optionList %} 
     {% if option.useColorForMarker or option.useIconForMarker %}
	    .bgdSoftColorAs[option-id="{{ option.id }}"] { background-color: {{ option.color }} }
	    .borderSoftColorAs[option-id="{{ option.id }}"] { border-color: {{ option.color }} }
	    .bgdColorAs[option-id="{{ option.id }}"] { background-color: {{ option.color }} }
	    .colorAs[option-id="{{ option.id }}"] { color: {{ option.color }} }
    {% endif %}
  {% endfor %} 
</style>
{% endif %}