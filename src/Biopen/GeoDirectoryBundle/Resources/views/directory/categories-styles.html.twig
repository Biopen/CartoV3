{% if optionList is defined %}
<style>
	
	.bgdSoftColorAs { background-color: #484848 }
  .borderSoftColorAs { border-color: #484848 }
  .bgdColorAs { background-color: #484848 }
  .colorAs { color:#484848 }  

  {% for option in optionList %} 
     {% if option.useColorForMarker or option.useIconForMarker %}
	    .bgdSoftColorAs[option-id="{{ option.id }}"] { background-color: {{ option.softColor }} }
	    .borderSoftColorAs[option-id="{{ option.id }}"] { border-color: {{ option.softColor }} }
	    .bgdColorAs[option-id="{{ option.id }}"] { background-color: {{ option.color }} }
	    .colorAs[option-id="{{ option.id }}"] { color: {{ option.color }} }
    {% endif %}
  {% endfor %} 

  .bgdSoftColorAs.pending { background-color: #484848 }
  .borderSoftColorAs.pending { border-color: #484848 }
  .bgdColorAs.pending { background-color: #484848 }
  .colorAs.pending { color:#484848 }
</style>
{% endif %}